function displayAltText() {
    const image = document.getElementById('img');  
    const altText = image.alt;
    const altTextDisplay = document.getElementById('altTextDisplay');
    
    if (altTextDisplay.textContent === altText) {
        altTextDisplay.textContent = '';
    } else {
        altTextDisplay.textContent = altText;
    }
}

function displayAltText() {
    const img = document.getElementById('activity1_img');  
    const altText1 = img.alt;  // Get the alt text of the image
    const altTextDisplay = document.getElementById('alt-text');
    
    // Toggle the display of the alt text
    if (altTextDisplay.textContent === altText1) {
        altTextDisplay.textContent = '';  // Clear the alt text if already displayed
    } else {
        altTextDisplay.textContent = altText1;  // Display the alt text
    }
}
